            MDLabel:
                text: 'MikroLite\nАвторизация'
                halign: 'center'
            MDTextField:
                id: ip_dns
                hint_text: "IP адрес или DNS имя"
                font_size: 20
            MDTextField:
                id: user
                hint_text: "Имя пользователя"
                font_size: 20
            MDTextField:
                id: passwordv
                hint_text: "Пароль"
                font_size: 20
                password: True
            MDRaisedButton:
                text: "Подключиться"
                md_bg_color: .35, .35, 1, 1
                font_size: 22
                on_release:
                    app.connector()
                    app.root.current = 'MainMenu'
